<div class="awards">
  {% if site.awards != blank %}
    {% assign awards_size = site.awards | size %}
    <div
      class="table-responsive"
      {% if page.awards.scrollable and awards_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign awards = site.awards %}
        {% if page.awards.limit %}
          {% assign awards_limit = page.awards.limit %}
        {% else %}
          {% assign awards_limit = awards_size %}
        {% endif %}
        {% for item in awards limit: awards_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.year | join: ', ' }}</th>
            <td>{{ item.description }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No awards so far...</p>
  {% endif %}
</div>